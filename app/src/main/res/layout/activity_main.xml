<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.Signupsqlite.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <EditText
        android:id="@+id/FirstName"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FirstName"
        android:padding="10dp"
        android:inputType="text"
        android:textSize="20sp"
        android:background="@drawable/edit_text_borders"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/LastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="LastName"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:visibility="gone"
        android:inputType="text"
        android:textSize="20sp"
        android:background="@drawable/edit_text_borders"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/FName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FatherName"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:inputType="text"
        android:textSize="20sp"
        android:background="@drawable/edit_text_borders"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/Mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_borders"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PhoneNumber"
        android:layout_margin="5dp"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_borders"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_margin="5dp"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="20sp"
        android:background="@drawable/edit_text_borders"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="#D81B60"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <EditText
            android:id="@+id/ReadPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Phone Number"
            android:layout_margin="5dp"
            android:inputType="phone"
            android:padding="10dp"
            android:textSize="20sp"
            android:background="@drawable/edit_text_borders"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:hint="FirstName"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="#43A047"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvmail"
            android:hint="Mail-Id"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="#43A047"
            />

        <Button
            android:id="@+id/buttonReadData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#D81B60"
            android:text="Read Data"
            />

        <Button
            android:id="@+id/buttonGetFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/download"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:text="ImportDB File"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            />


        <Button
            android:id="@+id/buttonExpoortDB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/upload"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:text="ExportDB File"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    </LinearLayout>


</ScrollView>